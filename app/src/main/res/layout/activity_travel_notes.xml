<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="lyf.com.example.itravel.activity.TravelNotesActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_travel"
        android:layout_height="45dip"
        android:layout_width="match_parent"
        android:background="?attr/colorPrimary" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:text="游记"
            android:textColor="@color/white"/>

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/iv_travel_photo"
        android:layout_below="@id/tb_travel"
        android:layout_width="wrap_content"
        android:layout_height="120dip"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.001dip"
        android:background="#CCCCCC"
        android:layout_alignBottom="@id/iv_travel_photo"/>

    <ImageView
        android:id="@+id/iv_user_head"
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:layout_marginLeft="10dip"
        android:layout_below="@id/tb_travel"
        android:layout_marginTop="80dip"/>

    <TextView
        android:id="@+id/tv_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_user_head"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/iv_user_head"
        android:layout_marginLeft="10dip"
        android:text="用户"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_toRightOf="@id/tv_account"
        android:layout_alignBottom="@id/iv_user_head"
        android:text="♂"
        android:textSize="18sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_user_head"
        android:layout_toRightOf="@id/tv_gender"
        android:textColor="@color/black"
        android:layout_marginLeft="15dip"
        android:text="时间"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tv_city"
        android:layout_marginTop="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_below="@id/tv_account"
        android:textColor="@color/black"
        android:text="城市"
        android:textSize="24sp"/>

    <LinearLayout
        android:id="@+id/ll_travel"
        android:layout_width="match_parent"
        android:layout_height="25dip"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:orientation="horizontal"
        android:layout_below="@id/tv_city"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:text="游玩"/>

        <TextView
            android:id="@+id/tv_day_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:layout_marginLeft="3dip"
            android:text="0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:layout_marginLeft="3dip"
            android:text="天"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:layout_marginLeft="10dip"
            android:text="花费"/>

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:layout_marginLeft="3dip"
            android:text="0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:layout_marginLeft="3dip"
            android:text="￥"/>

        <TextView
            android:id="@+id/tv_clooect_num"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:text="0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dip"
            android:textColor="@color/gray"
            android:textSize="16sp"
            android:text="收藏"/>

        <ImageView
            android:id="@+id/iv_clooect"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:src="@drawable/clooect_nomal"
            android:layout_marginLeft="2dip"
            android:layout_marginBottom="1dip"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.001dip"
        android:layout_below="@id/ll_travel"
        android:background="@color/gray"/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_below="@id/ll_travel"
        android:padding="5dip"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_height="match_parent"
        android:layout_width="match_parent" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="lyf.com.example.itravel.activity.UpdatePasswordActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_update_password"
        android:layout_height="45dip"
        android:layout_width="match_parent"
        android:background="?attr/colorPrimary" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:text="修改密码"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:text="修改"
            android:textSize="16dip"
            android:textColor="@drawable/textview_color"
            android:layout_marginRight="15dip"/>

    </android.support.v7.widget.Toolbar>


        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:paddingLeft="100dip"
            android:gravity="center_vertical"
            android:hint="请输入旧密码"
            android:focusable="true"
            android:background="@null"
            android:layout_below="@id/tb_update_password"
            android:focusableInTouchMode="true"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:maxLength="16"
            android:textSize="18sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_alignTop="@id/et_password"
        android:layout_marginTop="9dip"
        android:layout_marginLeft="15dip"
        android:text="旧密码"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.001dip"
        android:layout_below="@id/et_password"
        android:background="#CCCCCC"/>

        <EditText
            android:id="@+id/et_new_password"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:paddingLeft="100dip"
            android:gravity="center_vertical"
            android:hint="请输入新密码"
            android:background="@null"
            android:layout_below="@id/et_password"
            android:inputType="textPassword"
            android:maxLength="16"
            android:textColor="@color/black"
            android:textSize="18sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_alignTop="@id/et_new_password"
        android:layout_marginTop="9dip"
        android:layout_marginLeft="15dip"
        android:text="新密码"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.001dip"
        android:layout_below="@id/et_new_password"
        android:background="#CCCCCC"/>

        <EditText
            android:id="@+id/et_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:paddingLeft="100dip"
            android:gravity="center_vertical"
            android:hint="请确认密码"
            android:background="@null"
            android:layout_below="@id/et_new_password"
            android:inputType="textPassword"
            android:maxLength="16"
            android:textColor="@color/black"
            android:textSize="18sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_alignTop="@id/et_confirm_password"
        android:layout_marginTop="9dip"
        android:layout_marginLeft="15dip"
        android:text="确认密码"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.001dip"
        android:layout_below="@id/et_confirm_password"
        android:background="#CCCCCC"/>

</RelativeLayout>

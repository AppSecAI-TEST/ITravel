<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_refresh"
    android:layout_height="match_parent"
    android:paddingBottom="50dip">

    <lyf.com.example.itravel.view.TouchPullView
        android:id="@+id/touchpull"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:pContentDrawable="@drawable/draw_circle"
        app:pContentDrawableMargin="3dip"
        app:pDragHeight="71dip"
        app:pColor="@color/colorLoginBackground"
        app:pRadius="23dip"
        app:pTangentAngle="110"
        app:pTargetGravityHeight="4dip"
        app:pTargetWidth="200dip" >

    </lyf.com.example.itravel.view.TouchPullView>

    <TextView
        android:id="@+id/tv_refresh"
        android:layout_marginTop="3dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="正在刷新..."
        android:textSize="14sp"
        android:layout_gravity="center"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_share"
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>

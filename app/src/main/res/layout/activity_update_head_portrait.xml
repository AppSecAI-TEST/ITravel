<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBEBEB"
    tools:context="lyf.com.example.itravel.activity.UpdateHeadPortraitActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_update_head_portrait"
        android:layout_height="45dip"
        android:layout_width="match_parent"
        android:background="?attr/colorPrimary" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:text="@string/head_portrait"
            android:textColor="@color/white"/>

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/iv_head_portrait"
        android:layout_width="90dip"
        android:layout_height="90dip"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/tv_update_head_portrait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_head_portrait"
        android:layout_centerHorizontal="true"
        android:text="@string/update_head_portrait"
        android:textColor="@color/colorLoginBackground"
        android:layout_marginTop="5dip"
        android:textSize="18sp"/>

</RelativeLayout>

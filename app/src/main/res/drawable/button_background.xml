            <gradient
                android:startColor="#AA96BB"
                android:endColor="#AA96BB" />

            <corners
                android:radius="10dip" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="#AA96BB"
                android:endColor="#AA96BB" />
            <corners
                android:radius="10dip" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#715D76"
                android:endColor="#715D76" />

            <corners
                android:radius="10dip" />
        </shape>
    </item>

</selector>
